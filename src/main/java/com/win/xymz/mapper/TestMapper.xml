<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.win.xymz.mapperInterface.TestMapper" > 
	<!-- Result Map-->
	<resultMap id="BaseResultMap" type="com.win.xymz.vo.Test" >
		<result column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="password" property="password"/>
	</resultMap>
	
	<!-- 所有列 -->
	<sql id="Base_Column_List" >
		`id`, `name`,`password`
	</sql>
	
	<!-- 插入记录 -->
	<insert id="add" parameterType="Object" >
		INSERT INTO `test`(`id`, `name`,`password`)
		VALUES(#{id}, #{name} ,#{password})
	</insert>
	
	<!-- 批量插入记录 -->
	<insert id="batchAdd" parameterType="java.util.List" >
		INSERT INTO `test`(`id`, `name`,`password`)
		VALUES
		<foreach collection="list" item="item" index="index" separator="," > 
			(#{item.id}, #{item.name} ,#{item.password})
		</foreach>
	</insert>
	
	<!-- 修改记录-->  
	<update id="update" parameterType="Object" >
		UPDATE `test` SET `name` = #{name}, `password`=#{password} where `id` = #{id}
	</update>
	
	<!-- 查询记录 -->
	<select id="queryById" resultMap="BaseResultMap" parameterType="Object">
		select <include refid="Base_Column_List" /> from `test` where `id` = #{id}
	</select>
	
	<!-- 删除记录 -->
	<delete id="delete" parameterType="Object">
		delete from `test` where `id`= #{id}
	</delete>
	
	<!-- 根据Name查询记录 -->
	<select id="queryByName" resultMap="BaseResultMap" parameterType="String">
		select <include refid="Base_Column_List" /> from `test` where `id` = #{id}
	</select>

</mapper>   
